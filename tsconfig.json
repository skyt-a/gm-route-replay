{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["node"]
  },
  "include": ["packages/*/src/**/*", "tsup.config.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
